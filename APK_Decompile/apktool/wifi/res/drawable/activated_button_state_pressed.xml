<?xml version="1.0" encoding="utf-8"?>
<selector android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff0063c1" />
            <stroke android:width="1.0dip" android:color="@color/framework_white_color" />
            <corners android:radius="100.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff0063c1" />
            <stroke android:width="1.0dip" android:color="@color/framework_white_color" />
            <corners android:radius="100.0dip" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/framework_transparent" />
            <stroke android:width="1.0dip" android:color="@color/framework_white_color" />
            <corners android:radius="100.0dip" />
        </shape>
    </item>
</selector>