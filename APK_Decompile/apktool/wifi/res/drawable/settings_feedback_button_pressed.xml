<?xml version="1.0" encoding="utf-8"?>
<selector android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/settings_feedback_btn_press" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/settings_feedback_btn_press" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/settings_main" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/settings_samll_text" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
</selector>